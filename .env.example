# =============================================================================
# Blue FaaS 환경변수 설정
# 이 파일을 .env로 복사하여 사용하세요: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# AWS 설정
# -----------------------------------------------------------------------------
# AWS 리전
AWS_REGION=ap-northeast-2

# AWS 자격 증명 (로컬 개발용, IRSA 사용 시 불필요)
# AWS_ACCESS_KEY_ID=your-access-key-id
# AWS_SECRET_ACCESS_KEY=your-secret-access-key

# -----------------------------------------------------------------------------
# S3 설정
# -----------------------------------------------------------------------------
# 소스 코드 및 빌드 아티팩트 저장 버킷
S3_BUCKET_NAME=sfbank-blue-functions-code-bucket

# -----------------------------------------------------------------------------
# DynamoDB 설정
# -----------------------------------------------------------------------------
# 빌드 작업 상태 저장 테이블
DYNAMODB_TABLE_NAME=sfbank-blue-FaaSData

# 로컬 DynamoDB 사용 시 (docker run -p 8000:8000 amazon/dynamodb-local)
# DYNAMODB_ENDPOINT_URL=http://localhost:8000

# -----------------------------------------------------------------------------
# Spin 빌드 환경 설정
# -----------------------------------------------------------------------------
# Spin Python venv 템플릿 경로 (componentize-py, spin-sdk 포함)
SPIN_PYTHON_VENV_TEMPLATE=/opt/spin-python-venv

# 로컬 개발 시 venv 템플릿 경로 예시
# SPIN_PYTHON_VENV_TEMPLATE=/home/user/.spin/python-venv

# -----------------------------------------------------------------------------
# Core Service 설정
# -----------------------------------------------------------------------------
# Core Service는 인프라 팀에서 제공하는 빌드/푸시 전용 서비스입니다.
# 
# 비어있으면 (기본값): 로컬에서 spin CLI를 직접 실행 (subprocess)
#   - spin build, spin registry push 등을 로컬에서 실행
#   - 로컬 개발/테스트 시 이 방식 사용
#
# 설정하면: Core Service API로 빌드/푸시 작업을 위임
#   - POST {endpoint}/api/v1/build
#   - POST {endpoint}/api/v1/push
#   - 프로덕션 환경에서 사용
#
# 예시: CORE_SERVICE_ENDPOINT=http://core-service.internal:8080
CORE_SERVICE_ENDPOINT=

# Core Service 요청 타임아웃 (초, 기본값: 300)
# CORE_SERVICE_TIMEOUT=300

# -----------------------------------------------------------------------------
# ECR 설정
# -----------------------------------------------------------------------------
# ECR 레지스트리 URL (SpinApp 이미지 저장소)
# 기본값: 217350599014.dkr.ecr.ap-northeast-2.amazonaws.com/blue-final-faas-app
ECR_REGISTRY_URL=217350599014.dkr.ecr.ap-northeast-2.amazonaws.com/blue-final-faas-app

# -----------------------------------------------------------------------------
# 서버 설정
# -----------------------------------------------------------------------------
# 로그 레벨
LOG_LEVEL=INFO

# 서버 호스트/포트 (uvicorn 실행 시)
# HOST=0.0.0.0
# PORT=8000
